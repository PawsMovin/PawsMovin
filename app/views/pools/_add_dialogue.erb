<%= form_tag(add_to_pool_post_path(@post), class: "simple_form") do %>

  <div class="input">
    <label>Pool Name</label>
    <span id="pool-name-container"><%= text_field_tag "pool_name", "", size: 20, data: { autocomplete: "pool" } %></span>
    <span id="pool-name-hint" class="hint">Search for a pool containing (<%= link_to "see full list", gallery_pools_path %>)</span>
  </div>

  <div class="input">
    <%= submit_tag "Submit" %>
  </div>
<% end %>

<% if recent_updated_pools.any? %>
  <div>
    <h3>Recent Pools</h3>
    <ul id="recent-pools">
      <% recent_updated_pools.each do |pool| %>
        <%= tag.li(pool.pretty_name, data: { value: pool.name }) %>
      <% end %>
    </ul>
  </div>
<% end %>
