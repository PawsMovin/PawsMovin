<%= subnav_link_to "Profile", user_path(user) %>
<%= subnav_link_to_if(policy([:admin, user]).update?, "Edit User", edit_admin_user_path(user)) %>
<% if policy(Ban).all?(:create?, :destroy?) %>
  <% if user.is_banned? %>
    <%= subnav_link_to "Unban", ban_path(user.recent_ban) %>
  <% else %>
    <%= subnav_link_to "Ban", new_ban_path(ban: { user_id: user.id }) %>
  <% end %>
<% end %>
