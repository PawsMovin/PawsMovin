<%= custom_form_for(mascot) do |f| %>
  <%= error_messages_for "mascot" %>
  <%= f.input(:mascot_file, as: :file, input_html: { accept: "image/png,image/jpeg,image/webp,.png,.jpg,.jpeg,.webp" }) %>
  <%= f.input(:display_name) %>
  <%= f.input(:background_color) %>
  <%= f.input(:artist_url) %>
  <%= f.input(:artist_name) %>
  <%= f.input(:available_on_string, label: "Available on", hint: "Separated by a comma, don't include spaces before/after") %>
  <%= f.input(:active) %>
  <%= f.input(:hide_anonymous, label: "Hide From Anonymous") %>
  <%= f.submit %>
<% end %>
